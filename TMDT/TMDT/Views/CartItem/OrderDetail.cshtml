@model List<TMDT.DetailBill>

@{
    ViewBag.Title = "OrderDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string M_name=null;
    
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Chi tiết đơn đặt hàng</h3>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        <br />
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    @foreach (var item in Model)
                    {
                        <thead>
                            @if (M_name == null)
                            {
                                M_name = item.Product.Account.UserName;
                                <tr style="font-weight:bolder;"><td colspan="4">Tên người bán</td></tr>
                                <tr>
                                    <td>@item.Product.Account.UserName</td>
                                    <td>@item.Product.Account.Phone</td>
                                    <td>@item.Product.Account.Email</td>
                                    
                                    <td colspan="3">
                                        @Html.ActionLink("Đánh Giá", "GetRating", "Cartitem", new { id = item.Product.Account.AccountID + "," + user.AccountID }, "")
                                    </td>
                                </tr>
                                <tr style="font-weight:bolder;">
                                    <th>STT</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>
                                </tr>
                            }
                            @if (M_name != item.Product.Account.UserName)
                            {
                                <tr style="height:10px;"></tr>
                                <tr style="font-weight:bolder;"><td colspan="4">Tên người bán</td></tr>
                                <tr>
                                    <td>@item.Product.Account.UserName</td>
                                    <td colspan="3">
                                        @Html.ActionLink("Đánh Giá", "GetRating", "Cartitem", new { id = item.Product.Account.AccountID + "," + user.AccountID }, "")
                                    </td>
                                    
                                </tr>
                                <tr style="font-weight:bolder;">
                                    <th>STT</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Giá</th>
                                </tr>
                            }                                
                            </thead>
                                <tbody>
                                    @{int i = 1;}
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Product.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price</td>
                                    </tr>
                                    @{i++;}

                                </tbody>
                        }
                        </table>
                    </div>
                </div>
            </div>

